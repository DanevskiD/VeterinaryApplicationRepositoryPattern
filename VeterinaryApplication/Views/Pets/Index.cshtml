@model IEnumerable<VeterinaryApplication.Models.Pet>

@{
    ViewData["Title"] = "Index";
}

<h1>Veterinary Application - Pet Records</h1>

<p>
    <a asp-action="Create">Add New Pet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccines)

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @item.Owner.getFirstNameAndLastName()
            </td>
                <td>
                    @item.Vaccines.Count
                </td>
            <td>
                    <i class="fa fa-pencil">
                        <a asp-action="Edit" asp-route-id="@item.PetId">Edit</a> |
                    </i>
                    <i class="fa fa-address-book-o"> <a asp-action="Details" asp-route-id="@item.PetId">Details</a> |</i>
                    <i class="fa fa-trash-o"> <a asp-action="Delete" asp-route-id="@item.PetId">Delete</a></i>
            </td>
        </tr>
}
    </tbody>
</table>
